{
  "name": "Web Payment Request Shim",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Demo extension for Web Payment Request spec",
  "homepage_url": "http://extensionizr.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/bitcoin.js",
      "src/bg/wallet.js"
    ],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "https://*/*"
  ],
  "content_scripts": [{
    "matches": [
      "*://localhost/*"
    ],
    "js": [
      "src/inject/inject.js"
    ],
    "run_at": "document_start"
  }],
  "externally_connectable": {
    "matches": [
      "*://localhost/*"
    ]
  }
}